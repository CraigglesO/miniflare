{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "rootDir": ".",
    "checkJs": true,
    "allowJs": true,
    "paths": {
      "d1testflare": ["packages/d1testflare/src"],
      "@d1testflare/*": ["packages/*/src"]
    }
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/test/**/*.ts",
    "packages/d1testflare/bootstrap.js",
    "types"
  ],
  "exclude": [
    "packages/core/test/fixtures/wrangler"
  ]
}
